<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AgentRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent Store"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_fullname"
            android:hint="Fullname"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="#AFAFAF"
            app:met_baseColor="@android:color/black"
            app:met_primaryColor="@android:color/black"
            app:met_iconPadding="0dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_companyName"
            android:hint="CompanyName"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="#AFAFAF"
            app:met_baseColor="@android:color/black"
            app:met_primaryColor="@android:color/black"
            app:met_iconPadding="0dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_address"
            android:hint="Address"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="#AFAFAF"
            app:met_baseColor="@android:color/black"
            app:met_primaryColor="@android:color/black"
            app:met_iconPadding="0dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_provinsi"
            android:hint="Provinsi"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="#AFAFAF"
            app:met_baseColor="@android:color/black"
            app:met_primaryColor="@android:color/black"
            app:met_iconPadding="0dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_kota"
            android:hint="Kota"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="#AFAFAF"
            app:met_baseColor="@android:color/black"
            app:met_primaryColor="@android:color/black"
            app:met_iconPadding="0dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_kodepos"
            android:hint="Kodepos"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="#AFAFAF"
            app:met_baseColor="@android:color/black"
            app:met_primaryColor="@android:color/black"
            app:met_iconPadding="0dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/agent_regisbtn"
                android:text="REGISTER"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>