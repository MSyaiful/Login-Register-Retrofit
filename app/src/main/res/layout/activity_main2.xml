<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/card_paket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_paketlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_paket">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/cetak_username"
        android:text="Username"
        android:layout_margin="10dp"
        android:layout_below="@id/card_paket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/cetak_email"
        android:text="Email"
        android:layout_margin="10dp"
        android:layout_below="@id/cetak_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/cetak_email"/>

</RelativeLayout>